---
import ActionDump from "../../../actiondump";
import CodeBlock from "../../../layouts/CodeBlock.astro";

const codeBlock = findCodeBlock(Astro.params.block as string);

export function findCodeBlock(query : string) {
    const term = query.toLowerCase().replace(' ','').replace('_','')
    return ActionDump.codeblocks.find(cb => cb.identifier.replace('_','') == term || cb.name.toLowerCase().replace(' ','') == term || cb.item.name.toLowerCase().replace(' ','') == term);
}

---

{codeBlock && <CodeBlock codeblock={codeBlock} icon={codeBlock.item}></CodeBlock>}