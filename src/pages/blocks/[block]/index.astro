---
import Icon from "../../../layouts/Icon.astro";
import ActionDump from "../../../actiondump";

const codeBlock = findCodeBlock(Astro.params.block as string);

export function findCodeBlock(query : string) {
    const term = query.toLowerCase().replace(' ','').replace('_','')
    return ActionDump.codeblocks.find(cb => cb.identifier.replace('_','') == query || cb.name.toLowerCase().replace(' ','') == query || cb.item.name.toLowerCase().replace(' ','') == query);
}

---

{codeBlock && <Icon icon={codeBlock.item} background={`url(https://assets.mcasset.cloud/1.19.4/assets/minecraft/textures/block/${codeBlock.item.material.toLowerCase()}.png) repeat`}></Icon>}