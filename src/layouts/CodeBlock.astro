---
import Icon from "./Icon.astro";
import type { Codeblock, Icon as Item, SubActionBlock, Tag } from "../actiondump";

export interface Props {
    icon: Item;
    codeblock: Codeblock;
    path?: string[];
    tags?: Tag[],
    subActionBlocks?: SubActionBlock[]
}

const { codeblock, icon, path, tags, subActionBlocks } = Astro.props;
---

<Icon path={["blocks",codeblock.name.toLowerCase().replace(' ',''),...path ?? []]} background={`url(https://assets.mcasset.cloud/1.19.4/assets/minecraft/textures/block/${codeblock.item.material.toLowerCase()}.png) repeat`} icon={icon} tags={tags} subActionBlocks={subActionBlocks}>

</Icon>